{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block navtitle %}My Programs{% endblock %}

{% block panelContent %}
<div class="row">
    {% for program in programs %}
    <div class="col-sm-6 col-md-4 col-lg-3 mb-2">
        <div class="card text-center ">
            <div class="card-body">
                <h4 class="card-title">
                    {{ program.label }}
                </h4>
                <p class="card-text">
                    {{ program.description }}
                </p>
                <button class="btn btn-sm btn-outline-secondary fa fa-info-circle" data-toggle="modal" data-target="#program-detail-{{ program.id }}"></button>
                <div class="modal fade" id="program-detail-{{ program.id }}">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">{{ program.label }}</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p class="text-muted my-1 border-bottom">{{ program.description }}</p>
                                <ul class="list-group list-group-flush">
                                    {% for step in program.steps %}
                                        <li class="list-group-item d-flex justify-content-between align-items-center">{{ step.rank }} {{ step.type }} <span class="badge badge-light">{{ step.value }}</span> <span class="badge badge-light">{% if step.recipe is not null %}{{ step.recipe.label }}{% endif %} </span></li>
                                    {% endfor %}
                                 </ul>
                            </div>
                            <div class="modal-footer">
                                <a class="btn btn-sm btn-outline-secondary fa fa-edit" href="#"></a>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}

{% block sideMenu %}
{{ parent() }}
<h5 class="my-3 text-center">
    Actions
</h5>
<li class="nav-item p-1">
    <a class="nav-link btn btn-block btn-outline-dark" href="{{ path('new-program') }}">
        <span class="fa fa-edit">
            <span>
                <span class="d-none d-md-inline">
                    New program
                </span>
            </span>
        </span>
    </a>
</li>
{% endblock %}
